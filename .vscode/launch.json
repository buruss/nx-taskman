{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach",
      "port": 9229,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "stopOnEntry": false
    },
    {
      "type": "node",
      "request": "launch",
      "name": "launch www",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}\\apps\\www\\src\\main.ts",
      "env": {
        "NODE_ENV": "development" // development or production
      },
      "cwd": "${workspaceFolder}",
      "protocol": "inspector",
      "console": "integratedTerminal", // winston log가 디버그 콘솔에 출력되려면 필요함
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "launch admin-api",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}\\apps\\admin-api\\src\\main.ts",
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Next: Node",
      "runtimeExecutable": "next",
      "runtimeArgs": [
        "--inspect"
      ],
      "port": 9229,
      "console": "integratedTerminal"
    }
  ]
}