// nest.js용 설정 파일
// tsconfig.json은 next가 컴파일하면서 덮어쓰기 때문에 사용할 수 없음
{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "../../dist",
    "types": [
      "node",
      "jest"
    ],
  },
  "exclude": [
    "**/*.spec.ts"
  ],
  "include": [
    "**/*.ts"
  ]
}